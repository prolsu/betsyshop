<div class="container">
    <div class="column">
        <h1 id="homeTitle" class="title has-text-centered">BETSY</h1>
        {{!-- <h1 class="subtitle has-text-centered">Sign Up</h1> --}}
        <div class="column">
            <div class="box">
                <form id="signup">
                    <div class="field">
                        <p class="control has-icons-left has-icons-right">
                            <input class="input is-medium" id="email-input" type="email" placeholder="Email">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <span class="icon is-small is-right">
                                <i class="fas fa-check"></i>
                            </span>
                        </p>
                    </div><br>
                    <div class="field">
                        <p class="control has-icons-left">
                            <input class="input is-medium" id="password-input" type="password" placeholder="Password">
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </p>
                    </div><br>
                    <button class="button">Sign Up</button><br>
                </form>
                <hr>
                <h1 class="subtitle">Log In <a href="/login">here</a></h1>
            </div>
        </div>
    </div>
    <div class="modal" id="alertModal">
        <div class="modal-background"></div>
        <div class="modal-card" style="border-radius: 8px;">
            <div class="modal-card-head">
                <section id="alertContent" class="modal-card-body">
                    {{!-- alert content --}}
                </section>
                <button id="closeAlertModal" class="button is-medium is-info">Log In</button>
            </div>
        </div>
    </div>
</div>
