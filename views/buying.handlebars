<div class="container">

    <div class="column">
        <div class="columns">

            <div class="column is-6">
                <div class="box">
                    <div class="media-content">
                        <div class="content">
                            <h1 class="subtitle">What are you looking for?</h1>
                            <form>
                                <input id="searching" class="item input" type="text"
                                    placeholder="Enter your search here"><br><br>
                                <button class="submitBuySearch button">Search</button><br><br>
                            </form>
                            <button id="home" class="button">Return Home</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="column is-6">
                <ul>
                    {{#each Buying}}
                    {{#if active}}
                    {{>buy-block}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>

        </div>
    </div>
</div>